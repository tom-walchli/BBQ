<h1>BBQ</h1>

<div data-hook="bbq-info" data-bbq="<%= params[:id] %>">
	<h2>
		<%= @bbq.title %>
	</h2>

	<dl>
		<dt>Date:</dt>
		<dd><%= format_date(@bbq.date) %></dd>
		<dt>Venue:</dt>
		<dd><%= @bbq.venue %></dd>
	</dl>

	<button class="btn btn-success" data-hook="join-bbq">
		<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
		Join <%= @bbq.title %>
	</button>
</div>

<a href="<%= barbecues_path %>">Back to list of BBQs</a>
